  <body>
    <a href="/"><i class="fas fa-angle-left arrow-back fa-2x" style="top: 2.5%"></i></a>

  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-7 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Register</h5>
            <%- include ('partials/messages') %>
            <form class="form-signin" method="post" action="/users/register">

              <div class="form-label-group">
                <input type="text" id="nickName" name="nickName" class="form-control" placeholder="Nickname" value="<%= typeof nickName != 'undefined' ? nickName : '' %>" required autofocus>
                <label for="nickName">Nickname</label>
              </div>

              <div class="form-label-group">
                <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" value="<%= typeof email != 'undefined' ? email : '' %>" required>
                <label for="inputEmail">Email address</label>
              </div>

              <div class="form-label-group">
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>" required >
                <label for="inputPassword">Password</label>
              </div>

              <div class="form-label-group">
                <input type="password" name="password2" id="inputPassword2" class="form-control" placeholder="Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" required>
                <label for="inputPassword2">Password</label>
              </div>

              <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Register</button>
              <!-- <hr class="my-4">
              <button class="btn btn-lg btn-google btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign up with Google</button>
              <button class="btn btn-lg btn-facebook btn-block text-uppercase" type="submit"><i class="fab fa-facebook-f mr-2"></i> Sign up with Facebook</button> -->

            <br>

              <span><strong>Already a user? </strong><a href="/users/login">Sign in</a></span>
              
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('partials/footer')%>